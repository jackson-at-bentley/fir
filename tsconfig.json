{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "lib": [ "esnext" ],
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "build",
    "strict": true,
    "noErrorTruncation": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/*",
  ],
}
