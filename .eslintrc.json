{
    "env": {
        "node": true,
        "es2022": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": ["error"],
        "quotes": ["error", "single", {
            "avoidEscape":  true,
            "allowTemplateLiterals": true
        }],
        "semi-style": ["error", "last"],
        "semi": ["error", "always"],
        "sort-imports": ["error"]
    }
}
